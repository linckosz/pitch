{% extends '/bundles/lincko/quiz/templates/base.twig' %}
{% block frame %}
	<div id="begin_quiz_result_wait" class="visibility_hidden">
		<link rel="stylesheet" href="{{ _filelatest('/lincko/quiz/styles/quiz/result/wait.css') }}" type="text/css" />
		<script src="{{ _filelatest('/lincko/quiz/scripts/quiz/result/wait.js') }}" type="text/javascript"></script>
	</div>

	<div class="quiz_result_wait_top">
		{% if data_answered %}
			<div class="quiz_result_wait_answered">
				{{ _trans('quiz', 0, 8, 'html') }}{# You already answered #}
			</div>
		{% endif %}
		<div>
			{{ _trans('quiz', 0, 9, 'html') }}{# Please wait for the next question #}
		</div>
		<img id="quiz_result_wait_gif" src="{{ _filelatest('/lincko/quiz/images/gif/wait01.gif') }}" />
	</div>

	<div id="quiz_result_wait_scan">
		<span id="quiz_result_wait_scan_sentence">{{ _trans('quiz', 0, 15, 'html') }}{# Scan next quiz #}</span>
		<img id="quiz_result_wait_scan_picture" src="{{ _filelatest('/lincko/quiz/images/phone.png') }}" />
	</div>

	<div class="quiz_result_wait_followus">
		<div>{{ _trans('quiz', 0, 4, 'html') }}{# Follow us on WeChat #}</div>
		<img class="quiz_result_wait_picture" src="{{ _filelatest('/lincko/wrapper/images/wechat/official.jpg') }}" />
	</div>

	

	<div id="end_quiz_result_wait" class="visibility_hidden"></div>
{% endblock %}
