{% extends '/bundles/lincko/quiz/templates/base.twig' %}
{% block frame %}
	<div id="begin_quiz_result_answer" class="visibility_hidden">
		<link rel="stylesheet" href="{{ _filelatest('/lincko/quiz/styles/quiz/result/answer.css') }}" type="text/css" />
		<script src="{{ _filelatest('/lincko/quiz/scripts/quiz/result/answer.js') }}" type="text/javascript"></script>
	</div>

	<div class="quiz_result_answer_top">
		<div>
			{{ _trans('quiz', 0, 5, 'html') }}{# And your answer is... #}
		</div>
		<div id="quiz_result_answer_count">3</div>
		{% if data_correct %}
			<div id="quiz_result_answer_answer">
				{{ _trans('quiz', 0, 6, 'html') }}{# correct! #}
			</div>
			<img id="quiz_result_answer_gif" src="{{ _filelatest('/lincko/quiz/images/gif/correct01.gif') }}" />
		{% else %}
			<div id="quiz_result_answer_answer">
				{{ _trans('quiz', 0, 10, 'html') }}{# not the one that I think is correct ðŸ˜‰ #}
			</div>
			<img id="quiz_result_answer_gif" src="{{ _filelatest('/lincko/quiz/images/gif/wrong04.gif') }}" />
		{% endif %}
	</div>

	<div id="quiz_result_answer_scan">
		<span id="quiz_result_answer_scan_sentence" >{{ _trans('quiz', 0, 15, 'html') }}{# Scan next quiz #}</span>
		<img id="quiz_result_answer_scan_picture" src="{{ _filelatest('/lincko/quiz/images/phone.png') }}" />
	</div>

	<div class="quiz_result_answer_followus">
		<div>{{ _trans('quiz', 0, 4, 'html') }}{# Follow us on WeChat #}</div>
		<img class="quiz_result_answer_picture" src="{{ _filelatest('/lincko/wrapper/images/wechat/official.jpg') }}" />
	</div>

	<div id="end_quiz_result_answer" class="visibility_hidden">
		<script type="text/javascript">
			var quiz_result_answer_count = 3;
			var quiz_result_answer_count_timer = false
			setTimeout(function(){
				quiz_result_answer_count_timer = setInterval(function(){
					quiz_result_answer_count--;
					if(quiz_result_answer_count==0){
						clearInterval(quiz_result_answer_count_timer);
						$("#quiz_result_answer_count").css("visibility", "hidden");
						$("#quiz_result_answer_answer, #quiz_result_answer_gif, #quiz_result_answer_scan").css("visibility", "visible");
					} else {
						$("#quiz_result_answer_count").html(quiz_result_answer_count);
					}
				}, 1000);
			}, 300);
		</script>
	</div>
{% endblock %}
