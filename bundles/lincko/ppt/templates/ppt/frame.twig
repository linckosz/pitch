{% extends '/bundles/lincko/ppt/templates/base.twig' %}
{% block frame %}
	<div id="begin_ppt_frame" class="visibility_hidden">
		<link rel="stylesheet" href="{{ _filelatest('/lincko/ppt/styles/ppt/frame.css') }}" type="text/css" />
		<noscript>
			<style type="text/css">
				#ppt_frame_right_top {
					background-image: url("{{ data_pitch_url|raw }}");
				}
			</style>
		</noscript>
		{% if body_preview %}
			<style type="text/css">
				#ppt_frame_website {
					left: 9vw;
					left: 15vmin;
					font-size: 3.2vw;
					font-size: 5.2vmin;
				}
				#ppt_frame_website_logo {
					height: 4.4vw;
					height: 5.6vmin;
					line-height: 4.4vw;
					line-height: 5.6vmin;
					width: 4.4vw;
					width: 5.6vmin;
					font-size: 4.2vw;
					font-size: 5.4vmin;
				}
			</style>
		{% endif %}
		<script type="text/javascript">
			var ppt_frame_right_top_src = function(){
				return "{{ data_pitch_url_raw|raw }}?time="+(new Date()).getTime(){% if body_preview %}+"&preview=1"{% endif %};
			}
		</script>
		<script src="{{ _filelatest('/lincko/ppt/scripts/ppt/frame.js') }}" type="text/javascript"></script>
		<script src="{{ _filelatest('/lincko/ppt/scripts/ppt/event.js') }}" type="text/javascript"></script>
	</div>

	<div id="ppt_frame">
		<div id="ppt_frame_left">
			<div id="ppt_frame_left_top">
				{% if data_question_picture %}
					<img id="quiz_question_picture" src="{{ data_question_picture }}" />
				{% endif %}
				<span id="ppt_question_prefix" class="display_none">{{ _trans('ppt', 0, 2, 'html') }}{# Q: #}</span>
				<span id="ppt_question_title">{{ data_question_title }}</span>
			</div>
			<div id="ppt_frame_left_bottom">
				{% block qanda %}
				{% endblock %}
			</div>
		</div>
		<div id="ppt_frame_right">
			<div id="ppt_frame_right_top_scan" class="{{ get_style }} {% if data_pitch_url_hide %}hidden{% endif %}">
				<span class="fa fa-mobile" id="ppt_frame_right_top_scan_qrcode"></span>{{ _trans('ppt', 0, 4, 'html') }}{# Scan to Answer #}
			</div>
			<div id="ppt_frame_right_top" class="{{ get_style }} {% if data_pitch_url_hide %}hidden{% endif %}">
			</div>
			<div id="ppt_frame_right_bottom">
				<iframe id="ppt_stats_iframe" name="ppt_stats_iframe" frameborder="0" scrolling="no" src="{{ data_stats_iframe|raw }}"></iframe>
			</div>
		</div>
	</div>

	<div id="ppt_frame_website">
		<span id="ppt_frame_website_logo" class="icon-projectBlack"></span><span id="ppt_frame_website_link">pitch.lincko.com</span>
	</div>

	<img id="ppt_frame_style" src="{{ _filelatest(data_question_style_picture) }}" />

	<div id="end_ppt_frame" class="visibility_hidden">
		<script type="text/javascript">
			$("#ppt_frame_right_top").css('visibility', 'hidden');
		</script>
	</div>
{% endblock %}
